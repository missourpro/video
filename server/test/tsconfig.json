{
  "compilerOptions": {

    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2016"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2015",
    "types": [
      "jasmine",
      "jasmine-matchers",
      "node",
      "electron"
    ],
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "noImplicitAny": false
  },
  "include": [
    "./**/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
